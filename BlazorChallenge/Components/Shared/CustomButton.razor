@namespace BlazorChallenge.Shared

<button class="header-btn @CssClass" disabled="@IsDisabled">
    @if (!string.IsNullOrEmpty(IconSrc))
    {
        <img src="@IconSrc" alt="@AltText" class="icon-svg" />
    }
    <span class="btn-text">@ButtonText</span>
</button>

@code {
    [Parameter] 
    public string ButtonText { get; set; }
    [Parameter] 
    public string CssClass { get; set; } = string.Empty;
    [Parameter] 
    public bool IsDisabled { get; set; } = false;
    [Parameter] 
    public string IconSrc { get; set; }
    [Parameter] 
    public string AltText { get; set; } = "Button Icon";
}
